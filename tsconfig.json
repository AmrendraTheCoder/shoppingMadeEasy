{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/products/[id]/page.jsx", "app/api/cron/route.js", "app/layout.jsx", "app/page.jsx", "components/HeroCarousel.jsx", "components/Modal.jsx", "components/Navbar.jsx", "components/PriceInfoCard.jsx", "components/ProductCard.jsx", "components/SearchBar.jsx", "lib/actions/index.js", "lib/nodemailer/index.js", "lib/scraper/index.js", "lib/mongoose.js", "lib/utils.js", "types/index.js"],
  "exclude": ["node_modules"]
}
